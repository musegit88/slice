// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?
  isAdmin       Boolean   @default(false)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  accounts      Account[]
  address       Address[]
  cart          Cart[]
}

model Account {
  id                String  @id @default(auto()) @map("_id") @db.ObjectId
  userId            String  @db.ObjectId
  type              String
  provider          String
  providerAccountId String
  refres_token      String? @db.String
  access_token      String? @db.String
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.String
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Address {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  userId       String   @db.ObjectId
  label        String
  phonenumber  String
  street       String?
  block        String?
  floor        String?
  housenumber  String?
  isApartement Boolean? @default(false)
  isDefault    Boolean? @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Category {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  menu      Menu[]   @relation("MenuToCategory")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

type extrasType {
  name       String?
  extraPrice Int?
}

type sizesType {
  name       String?
  extraPrice Int?
}

type CrustOption {
  name       String?
  extraPrice Int?
}

model Menu {
  id           String        @id @default(auto()) @map("_id") @db.ObjectId
  name         String
  description  String
  image        String
  price        Int
  categoryId   String        @db.ObjectId
  extras       extrasType[]
  sizes        sizesType[]
  crustOptions CrustOption[]
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt

  category Category @relation("MenuToCategory", fields: [categoryId], references: [id], onDelete: Cascade)
}

type cartItems {
  id         String
  menuId     String
  name       String
  image      String
  basePrice  Int
  totalPrice Int
  quantity   Int
  sizes      sizesType[]
  extras     extrasType[]
}

enum OrderStatus {
  PENDING
  PREPARING
  COMPLETED
  DELIVERING
  DELIVERED
}

model Order {
  id              String      @id @default(auto()) @map("_id") @db.ObjectId
  userId          String
  username        String
  email           String
  label           String
  phoneNumber     String?
  street          String?
  block           String?
  floor           String?
  houseNumber     String?
  isApartement    Boolean?    @default(false)
  isDefault       Boolean     @default(false)
  cartItems       cartItems[]
  paid            Boolean     @default(false)
  status          OrderStatus @default(PENDING)
  deletedByUserAt DateTime?
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
}

model Cart {
  id         String       @id @default(auto()) @map("_id") @db.ObjectId
  userId     String       @db.ObjectId
  menuId     String       @db.ObjectId
  name       String
  image      String
  basePrice  Int
  totalPrice Int
  sizes      sizesType[]
  extras     extrasType[]
  quantity   Int          @default(1)
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}
